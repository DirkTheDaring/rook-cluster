apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: {{ issuer.name }}
spec:
  acme:
    email: {{ issuer.email }}
    server: {{ issuer.server }}
    privateKeySecretRef:
      name: {{ issuer.secret_name }}
    solvers:
      - dns01:
          webhook:
            groupName: {{ issuer.group_name }}
            solverName: {{ issuer.solver_name }}
