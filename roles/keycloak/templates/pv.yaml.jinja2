apiVersion: v1
kind: PersistentVolume
metadata:
  name: keycloak-keycloak-cacerts-pv
spec:
  accessModes:
  - ReadOnlyMany
  capacity:
    storage: 50Gi
  nfs:
    server: {{ keycloak_cacerts_nfs_server }}
    path:   {{ keycloak_cacerts_nfs_path }}
  storageClassName: nfs-custom
  claimRef:
    apiVersion: v1
    kind: PersistentVolumeClaim
    namespace: keycloak
    name:      keycloak-cacerts
