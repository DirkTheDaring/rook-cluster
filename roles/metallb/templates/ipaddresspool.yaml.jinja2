# https://metallb.universe.tf/apis/#metallb.io/v1beta1.IPAddressPool
apiVersion: metallb.io/v1beta1
kind: IPAddressPool

metadata:
  namespace: metallb-system
  name:      loadbalanced

spec:
  addresses:
  - "{{ metallb_pool_address }}"
  autoAssign: false # AutoAssign flag used to prevent MetallB from automatic allocation for a pool.
